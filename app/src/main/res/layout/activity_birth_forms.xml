<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".birthCertificate.birthForms">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/birth_certificate"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:tint="@color/colorWhite"
                    android:background="@drawable/circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:text="شهادة الميلاد"
                    android:layout_marginBottom="30dp"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginTop="15dp"
                    android:id="@+id/show_my_form"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDark"
                    android:text="اضهار الطلب" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/first_time_birth_certificate"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:text="رفع طلب شهادة الميلاد"
                    android:background="@color/colorDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:src="@drawable/dash"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>