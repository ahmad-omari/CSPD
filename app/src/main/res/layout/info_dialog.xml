<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_opp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titl"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:textColor="@color/colorDark"
                android:textStyle="bold"
                android:text="CSPD Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="This application used to facilitate your civil status and passport department services which include :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="1- ID card services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="2- Passport services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="3- Family book services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="4- Birth certficate services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorDark"
                android:text="5- Death certficate services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/retok"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:text="Return"
                android:layout_marginTop="20dp"
                android:background="@color/colorDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>