<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_opp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titl"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp"
                    android:textColor="@color/colorDark"
                    android:textStyle="bold"
                    android:text="من نحن"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="تم عمل هذا المشروع من قبل الطلاب:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="1- أحمد العمري"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="2- فيصل عمر
"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="3- غسان العجلوني"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="4- أوس الصمادي
"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="بأشراف الدكتور الفضيل وائل مارديني"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:text="مشروع تخرج 2 قسم علوم الحاسوب/كلية تكنولوجيا الحاسوب والمعلومات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <Button
                    android:id="@+id/retok"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:text="العودة"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>