<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdCard.idCardForms">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/id_card"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:tint="@color/colorWhite"
                    android:background="@drawable/circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:text="طلبات الهوية"
                    android:layout_marginBottom="30dp"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/renew_id_card"
                    android:background="@color/colorDark"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="تجديد الهوية"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/damaged_allowance_card"
                    android:background="@color/colorDark"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="استبدال هوية محطمة"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/replacement_of_lost_card"
                    android:background="@color/colorDark"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="بدل فاقد"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>